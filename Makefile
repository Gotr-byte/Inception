export IMG
certs:
	openssl req -x509 -nodes -days 365 -newkey rsa:2048 \
	-keyout $(CERTS_DIR)/nginx-selfsigned.key -out $(CERTS_DIR)/nginx-selfsigned.crt \
	-subj "/C=US/ST=State/L=City/O=Organization/CN=yourdomain.com"

clean:
fclean:	clean
re:		fclean all

CROSS = "\033[8m"
RED = "\033[0;1;91m"
